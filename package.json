		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"keywords": ["create-wih-app", "svelte", "sveltekit", "typescript", "tailwindcss"],
	"engines": {
		"node": ">=20.12.2"
	},
	"exports": "./dist/index.js",
	"bin": {
		"create-wih-app": "./dist/index.js"
	},
	"author": "Antoine Lethimonnier <43064022+WarningImHack3r@users.noreply.github.com>",
	"license": "MIT",
	"type": "module",
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"chalk": "^5.3.0",
		"create-svelte": "^6.1.0",
		"tailwindcss": "^3.4.3"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/eslint": "^8.56.9",
		"@types/node": "^20.12.7",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"type-fest": "^4.15.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.6.0"
	}
