{
	"name": "create-wih-app",
	"version": "1.0.4",
	"description": "An opinionated type-safe SvelteKit starter",
	"repository": {
		"type": "git",
		"url": "https://github.com/WarningImHack3r/create-wih-app"
	},
	"scripts": {
		"typecheck": "tsc",
		"build": "tsup src",
